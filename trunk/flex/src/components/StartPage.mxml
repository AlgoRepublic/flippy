<?xml version="1.0" encoding="utf-8"?>
<mx:HBox xmlns:mx="http://www.adobe.com/2006/mxml" xmlns:flippy="components.*" width="100%" height="100%">
	<mx:VBox>
		<mx:Script>
			<![CDATA[
				[Bindable]
				public var loginInfo:LoginInfo;
			]]>
		</mx:Script>
		<mx:Label text="{loginInfo.userName}"/>
		<mx:Label text="{loginInfo.password}"/>
		<mx:Label text="{loginInfo.rememberMe}"/>
	</mx:VBox>
	<flippy:Whiteboard/>
</mx:HBox>
