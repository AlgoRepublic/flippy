<?xml version="1.0" encoding="utf-8"?>
<mx:VBox xmlns:mx="http://www.adobe.com/2006/mxml" width="100%" height="100%" verticalAlign="middle" horizontalAlign="center" creationComplete="init()">
	<mx:Script>
		<![CDATA[
			import flash.events.Event;
			import mx.controls.*;
			import com.flippy.fl.model.*;
			import com.flippy.fl.events.*;			
		
			[Bindable]
			private var dp:Array = [1, 2, 3, 4, 5, 6, 7, 8, 9];  
			
			private var model:FlippyModelLocator = FlippyModelLocator.getInstance();
			
			private function init():void {
				// do init
			}
			
			private function doIt(event:Event):void {
				var but:Button =  Button(event.target)
				
				new RoomChooseEvent(but.label).dispatch();				
			}
			
		]]>
	</mx:Script>
	
	<mx:Label text="Please select your room"/>
	<mx:Tile direction="horizontal" borderStyle="inset" 
		horizontalGap="10" verticalGap="15"
		paddingLeft="10" paddingTop="10" paddingBottom="10" paddingRight="10" width="50%">
	
		<mx:Repeater id="rp" dataProvider="{dp}">
			<mx:Button height="49" width="100" 
				label="{'sess-'+String(rp.currentItem)}" 
				click="doIt(event)"/>
		</mx:Repeater>    
	</mx:Tile>
  
</mx:VBox>
