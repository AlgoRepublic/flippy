<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<bean name="multipartResolver" class="org.springframework.web.multipart.commons.CommonsMultipartResolver">
		<property name="maxUploadSize" value="2097152"></property>
	</bean>
	
	<bean name="/upload.htm" class="com.flippy.web.image.UploadController">
		<property name="storageDir" ref="storageDir"/>
	</bean>
	
	<bean name="/image.htm" class="com.flippy.web.image.ImageController">
		<property name="storageDir" ref="storageDir"/>
	</bean>
	
	<bean name="storageDir" class="java.io.File">
		<constructor-arg value="/home/lvconf/image_dir"/>
	</bean>
</beans>
